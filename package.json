{
    "name": "app",
    "description": "Example App",
    "version": "0.1.1",
    "private": true,
    "type": "module",
    "scripts": {
        "assets:generate": "npx @capacitor/assets generate --android --ios",
        "build:android-debug": "npm run sync && cd ./android && ./gradlew assembleDebug --stacktrace",
        "build:android": "npm run sync && cap build android",
        "build:ios": "npm run sync && cap build ios",
        "build:web": "npm run build",
        "build": "vite build",
        "build:debug": "DEBUG='vite:legacy' npm run build",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "dev:android": "concurrently -i --default-input-target=1 \"npm run dev:host\" \"cap run android --external --livereload --host 10.0.2.2 --port 5173\"",
        "dev:host": "vite dev --host",
        "dev": "vite dev",
        "emulator:android": "npm run sync && cap run android",
        "emulator:ios": "npm run sync && cap run ios",
        "format": "prettier --write .",
        "fix": "eslint --fix .",
        "lint:android": "cd ./android && ./gradlew check && ./gradlew lint",
        "lint": "prettier --check . && eslint .",
        "playwright-deps": "playwright install chrome webkit --with-deps",
        "pre-commit": "lint-staged",
        "prepare": "npx husky",
        "preview": "vite preview",
        "sync": "NODE_ENV=production npm run assets:generate && npm run build && cap sync && npm run format",
        "test:android": "cd ./android && ./gradlew test",
        "test:integration-docker": "docker run --rm -it $(docker build -f Dockerfile.tests -q .)",
        "test:integration": "playwright test",
        "test:unit": "vitest",
        "test": "npm run test:integration && npm run test:unit"
    },
    "browserslist": [
        "iOS >= 16",
        "ChromeAndroid >= 138",
        "last 2 Chrome versions",
        "last 2 Safari versions"
    ],
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,ts,mjs,svelte,css,html,md,json}": [
            "eslint --fix",
            "prettier --write",
            "npm run check"
        ]
    },
    "devDependencies": {
        "@capacitor/android": "^8.0.0",
        "@capacitor/assets": "^3.0.5",
        "@capacitor/cli": "^8.0.0",
        "@capacitor/core": "^8.0.0",
        "@capacitor/ios": "^8.0.0",
        "@eslint/compat": "^2.0.2",
        "@inlang/paraglide-js": "^2.10.0",
        "@playwright/test": "^1.58.2",
        "@sveltejs/adapter-static": "^3.0.10",
        "@sveltejs/kit": "^2.50.2",
        "@sveltejs/vite-plugin-svelte": "^6.2.4",
        "@tailwindcss/forms": "^0.5.11",
        "@tailwindcss/vite": "^4.1.18",
        "@types/eslint": "^9.6.1",
        "@types/node": "^25.2.2",
        "@vitejs/plugin-legacy": "^7.2.1",
        "browserslist": "^4.28.1",
        "browserslist-to-esbuild": "^2.1.1",
        "concurrently": "^9.2.1",
        "eslint": "^9.34.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-svelte": "^3.14.0",
        "globals": "^17.3.0",
        "husky": "^9.1.7",
        "jsdom": "^28.0.0",
        "lightningcss": "^1.31.1",
        "lint-staged": "^16.2.7",
        "prettier": "^3.8.1",
        "prettier-plugin-java": "^2.8.1",
        "prettier-plugin-svelte": "^3.4.1",
        "prettier-plugin-tailwindcss": "^0.7.2",
        "svelte": "^5.50.0",
        "svelte-check": "^4.3.6",
        "tailwind-scrollbar": "^4.0.2",
        "tailwindcss": "^4.1.18",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.54.0",
        "vite": "^7.3.1",
        "vite-plugin-devtools-json": "^1.0.0",
        "vitest": "^4.0.18"
    },
    "dependencies": {
        "@capacitor/app": "^8.0.0",
        "@capacitor/preferences": "^8.0.0",
        "@capacitor/splash-screen": "^8.0.0",
        "@sentry/capacitor": "^2.4.1",
        "@sentry/sveltekit": "9.46.0",
        "zod": "^4.3.6"
    }
}
